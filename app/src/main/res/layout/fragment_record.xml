<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@color/cyan_900"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fragment_record"
            android:layout_width="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/recycle"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/recordProgressBar"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:textSize="25sp" />

            <ProgressBar
                android:id="@+id/recordProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/record_progress_bar_background"
                android:indeterminate="false"
                android:max="100"

                android:progress="0"
                android:progressDrawable="@drawable/record_progress_bar" />
            <TextView
                android:id="@+id/recording_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recordProgressBar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/record_prompt"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/recording_status_text"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="10dp"
                    android:layout_alignTop="@+id/recording_status_text"
                    android:drawableLeft="@drawable/ic_media_pause"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/pause_recording_button"
                    android:textAllCaps="true" />

                <com.melnykov.fab.FloatingActionButton
                    android:id="@+id/btnRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_alignLeft="@+id/chronometer"
                    android:layout_alignStart="@+id/chronometer"
                    android:src="@drawable/ic_mic_white_36dp"
                    app:fab_colorNormal="@color/primary" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:background="@color/cyan_900"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Inspection Form"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ed_baground"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:text="Grid Type"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:id="@+id/spgridtype"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ed_baground"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Interested Crop"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:id="@+id/spinvestcroptype"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lin"
                    android:background="@drawable/ed_baground"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:text="Appointment Date"
                        android:id="@+id/sdate" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColorHint="#978a8a"
                            android:inputType="datetime"
                            android:fontFamily="sans-serif-condensed"
                            android:layout_marginLeft="5dp"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:background="@drawable/ed_baground"
                            android:layout_gravity="center"
                            android:hint="Date"
                            android:id="@+id/adate" />
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_weight="2"
                            android:id="@+id/adateimg"
                            android:layout_height="30dp"
                            android:src="@mipmap/ic_date_range"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:text="Total investment"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_weight="1"
                        android:background="@drawable/ed_baground"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:id="@+id/totalinvest"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/edt_bg_normal"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:text="Investment Info"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_weight="1"
                        android:background="@drawable/ed_baground"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:id="@+id/investinfo"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:background="@drawable/edt_bg_normal"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Expected Quantity"
                        android:layout_weight="1"
                        android:background="@drawable/ed_baground"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-condensed"
                        android:id="@+id/quntity"
                        android:inputType="textEmailAddress"
                        android:layout_weight="1"
                        android:background="@drawable/edt_bg_normal"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ed_baground"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:text="Quatity Units"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_weight="1"
                        android:background="@drawable/ed_baground"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:id="@+id/quatityunits"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:text="Expected Delivery"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_weight="1"
                        android:background="@drawable/ed_baground"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-condensed"
                        android:id="@+id/delivery"
                        android:layout_weight="1"
                        android:background="@drawable/edt_bg_normal"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ed_baground"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:text="currently processed"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_weight="1"
                        android:background="@drawable/ed_baground"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#000000"
                        android:id="@+id/spcurrentprocess"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ed_baground"

                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:text="Type of Consumer"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_weight="1"
                        android:background="@drawable/ed_baground"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#000000"
                        android:id="@+id/spcustomertype"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ed_baground"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:text="Investment Plan"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_weight="1"
                        android:background="@drawable/ed_baground"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-condensed"
                        android:id="@+id/spinvestplan"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:text="Inspection Status"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_weight="1"
                        android:background="@drawable/ed_baground"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-condensed"
                        android:id="@+id/status"
                        android:layout_weight="1"
                        android:background="@drawable/ed_baground"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Consumer Details"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_weight="1"
                    android:background="@drawable/ed_baground"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:text="Organization Name"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed"
                        android:background="@drawable/ed_baground"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:id="@+id/org_name"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_weight="1"
                        android:background="@drawable/edt_bg_normal"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:text="Gst Number"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_weight="1"
                        android:background="@drawable/ed_baground"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-condensed"
                        android:id="@+id/gstname"
                        android:layout_weight="1"
                        android:background="@drawable/edt_bg_normal"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ed_baground"

                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:text="Turnover"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_weight="1"
                        android:background="@drawable/ed_baground"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-condensed"
                        android:id="@+id/spturnover"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Email"
                        android:layout_weight="1"
                        android:background="@drawable/ed_baground"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-condensed"
                        android:id="@+id/name"
                        android:inputType="textEmailAddress"
                        android:layout_weight="1"
                        android:background="@drawable/edt_bg_normal"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="12.5sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:text="Point of Contact"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_weight="1"
                        android:background="@drawable/ed_baground"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:id="@+id/PointofContact"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_weight="1"
                        android:maxLength="13"
                        android:background="@drawable/edt_bg_normal"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:text="Contact Number"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_weight="1"
                        android:background="@drawable/ed_baground"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-condensed"
                        android:id="@+id/Contact"
                        android:layout_weight="1"
                        android:maxLength="13"
                        android:inputType="phone"
                        android:background="@drawable/edt_bg_normal"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:text="Current Address"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_weight="1"
                        android:background="@drawable/ed_baground"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:id="@+id/current_address"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_weight="1"
                        android:background="@drawable/edt_bg_normal"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
